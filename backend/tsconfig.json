{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "node"],
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["src", "jest.config.ts", "jest.setup.ts"],
  "exclude": ["node_modules", "dist"]
}